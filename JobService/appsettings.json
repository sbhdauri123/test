{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "GreenhouseApplicationSettings": {
    "Environment": "DEV",
    "AppName": "Greenhouse",
    "AppVersion": "v1"
  },
  "GreenhouseSettings": {
    "GREENHOUSE_IMPORT_FILES_PATH": "files/import",
    "GREENHOUSE_TRANSFORMED_FILES_PATH": "files/transformed"
  },
  "AWS": {
    "Region": "us-east-1"
  },
  "WinService": {
    "SERVICE_NAME": "LOCAL"
  },
  "NLog": {
    "autoReload": true,
    "throwConfigExceptions": true,
    "internalLogLevel": "Info",
    "internalLogToConsole": true,
    "internalLogFile": "${basedir}/logs/internal-nlog.txt",
    "extensions": [
      {
        "assembly": "NLog.Extensions.Logging"
      },
      {
        "assembly": "NLog.Web.AspNetCore"
      }
    ],
    "default-wrapper": {
      "type": "AsyncWrapper",
      "queueLimit": 10000,
      "overflowAction": "Grow",
      "batchSize": 1000,
      "timeToSleepBetweenBatches": 1
    },
    "targets": {
      "logfile": {
        "type": "File",
        "fileName": "${basedir}/logs/nlog-${shortdate}.log",
        "createDirs": true,
        "archiveEvery": "Day",
        "archiveNumbering": "Rolling",
        "maxArchiveFiles": 7,
        "layout": "${longdate}|${level:uppercase=true}|${logger}|${message}${onexception:${newline}${exception:format=tostring}}"
      },
      "logconsole": {
        "type": "ColoredConsole",
        "layout": "${longdate}|${level:uppercase=true}|${logger}|${message}${onexception:${newline}${exception:format=tostring}}"
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Debug",
        "writeTo": "logfile,logconsole"
      }
    ]
  }
}
